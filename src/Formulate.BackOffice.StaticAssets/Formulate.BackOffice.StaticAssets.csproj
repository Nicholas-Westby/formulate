<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

    <PropertyGroup>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>

        <ContentTargetFolders>content</ContentTargetFolders>

        <PackageOutputPath>../../output</PackageOutputPath>
        <IncludeBuildOutput>false</IncludeBuildOutput>
    </PropertyGroup>

    <!-- package files -->
    <ItemGroup>
        <Content Include="App_Plugins\**\*.*">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>

        <!-- target file to copy app_plugins in .netcore -->
        <None Include="build\**\*.*">
            <Pack>True</Pack>
            <PackagePath>buildTransitive</PackagePath>
        </None>
    </ItemGroup>
    <ItemGroup>
      <None Remove="App_Plugins\FormulateBackOffice\backoffice\dataValues\DataValues.DeleteController.js" />
      <None Remove="App_Plugins\FormulateBackOffice\backoffice\dataValues\delete.html" />
      <None Remove="App_Plugins\FormulateBackOffice\backoffice\forms\delete.html" />
      <None Remove="App_Plugins\FormulateBackOffice\backoffice\forms\Forms.DeleteController.js" />
      <None Remove="App_Plugins\FormulateBackOffice\directives\dialogs\delete.dialog.html" />
      <None Remove="App_Plugins\FormulateBackOffice\directives\dialogs\delete.dialog.js" />
      <None Remove="App_Plugins\FormulateBackOffice\resources\entityResource.js" />
    </ItemGroup>
</Project>
