<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <FormulateBackOfficeContentFilesPath>$(MSBuildThisFileDirectory)..\content\App_Plugins\FormulateBackOffice\**\*.*</FormulateBackOfficeContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyFormulateBackOfficeAssets" BeforeTargets="Build">
        <ItemGroup>
            <FormulateBackOfficeContentFiles Include="$(FormulateBackOfficeContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying FormulateBackOffice files: $(FormulateBackOfficeContentFilesPath) - #@(FormulateBackOfficeContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(FormulateBackOfficeContentFiles)"
            DestinationFiles="@(FormulateBackOfficeContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\FormulateBackOffice\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearFormulateBackOfficeAssets" BeforeTargets="Clean">
        <ItemGroup>
            <FormulateBackOfficeDir Include="$(MSBuildProjectDirectory)\App_Plugins\FormulateBackOffice\" />
        </ItemGroup>
        <Message Text="Clear old FormulateBackOffice data"  Importance="high" />
        <RemoveDir Directories="@(FormulateBackOfficeDir)"  />
    </Target>

</Project>